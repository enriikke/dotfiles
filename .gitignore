# Folder view configuration files
.DS_Store
Desktop.ini

# Thumbnail cache files
._*
Thumbs.db

# Files that might appear on external disks
.Spotlight-V100
.Trashes

# Ignore everything in .config by default
.config/*

# Allow specific configurations
!.config/ghostty
!.config/zsh

# Ignore runtime zsh files
.config/zsh/history
.config/zsh/plugins.zsh
.config/zsh/antidote/

# Misc
tmp/

# Exclude work-specific SSH configurations
config.work
config.local
*.work

# Exclude all SSH keys (public and private)
id_*
*_rsa*
*_ed25519*
*.pub
*.pem

# Exclude other sensitive SSH files
authorized_keys
known_hosts*
sockets/

# Runtime-generated files that shouldn't be tracked
*history

# Additional sensitive files
.aws/credentials
.aws/config
.gnupg/
.config/gh/hosts.yml          # GitHub CLI tokens
.config/1Password/
.netrc                        # Network credentials
.authinfo*                    # Authentication info
.credentials                  # Generic credentials
.env*                         # Environment files (often contain secrets)
.secrets*

# Application data that might contain sensitive info
.docker/config.json           # Docker registry credentials
.kube/config                  # Kubernetes configs
.terraform.d/credentials*
